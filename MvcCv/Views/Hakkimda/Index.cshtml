@using MvcCv.Models.Entity
@model List<TblHakkimda>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Hakkımda</h2>
<table class="table table-striped">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Adres</th>
        <th>Telefon</th>
        <th>Mail</th>
        <th>Açıklama</th>
        <th>Resim</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Ad</td>
            <td>@item.Soyad</td>
            <td>@item.Adres</td>
            <td>@item.Telefon</td>
            <td>@item.Mail</td>
            <td>@item.Aciklama</td>
            <td>@item.Resim</td>
        </tr>
    }
</table>
@foreach (var item in Model)
{
    <a href="/Hakkimda/HakkimdaGuncelle/@item.ID" class="btn btn-success"> Güncelle</a>
}

